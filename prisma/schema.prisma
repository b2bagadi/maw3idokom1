// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

enum UserRole {
  CUSTOMER
  BUSINESS
  SUPER_ADMIN
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
}

model User {
  id        String   @id @default(cuid())
  username  String   @unique
  email     String?  @unique
  password  String
  role      UserRole @default(CUSTOMER)
  name      String?
  phone     String?
  avatar    String?
  isBanned  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  business       Business[]
  bookings       Booking[]
  reviews        Review[]

  @@index([email])
  @@index([username])
}

model Business {
  id          String    @id @default(cuid())
  ownerId     String
  name        String
  slug        String    @unique
  description String?   @db.Text
  category    String
  
  // Location
  address     String?
  city        String?
  country     String?
  latitude    Float?
  longitude   Float?
  
  // Media
  coverImage  String?
  images      String[]
  
  // Status
  verified    Boolean   @default(false)
  suspended   Boolean   @default(false)
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relations
  owner       User      @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  services    Service[]
  staff       Staff[]
  bookings    Booking[]
  reviews     Review[]

  @@index([ownerId])
  @@index([category])
  @@index([city])
  @@index([slug])
}

model Service {
  id          String   @id @default(cuid())
  businessId  String
  name        String
  description String?  @db.Text
  price       Float
  duration    Int      // in minutes
  image       String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  business    Business @relation(fields: [businessId], references: [id], onDelete: Cascade)
  bookings    Booking[]

  @@index([businessId])
}

model Staff {
  id          String   @id @default(cuid())
  businessId  String
  name        String
  avatar      String?
  bio         String?  @db.Text
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  business    Business @relation(fields: [businessId], references: [id], onDelete: Cascade)
  bookings    Booking[]

  @@index([businessId])
}

model Booking {
  id          String        @id @default(cuid())
  customerId  String
  businessId  String
  serviceId   String
  staffId     String?
  
  // Booking details
  date        DateTime
  startTime   String        // Format: "HH:mm"
  endTime     String        // Format: "HH:mm"
  totalPrice  Float
  status      BookingStatus @default(PENDING)
  
  // Notes
  customerNote String?      @db.Text
  businessNote String?      @db.Text
  
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  // Relations
  customer    User          @relation(fields: [customerId], references: [id], onDelete: Cascade)
  business    Business      @relation(fields: [businessId], references: [id], onDelete: Cascade)
  service     Service       @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  staff       Staff?        @relation(fields: [staffId], references: [id], onDelete: SetNull)

  @@index([customerId])
  @@index([businessId])
  @@index([serviceId])
  @@index([date])
}

model Review {
  id          String   @id @default(cuid())
  customerId  String
  businessId  String
  rating      Int      // 1-5 stars
  comment     String?  @db.Text
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  customer    User     @relation(fields: [customerId], references: [id], onDelete: Cascade)
  business    Business @relation(fields: [businessId], references: [id], onDelete: Cascade)

  @@index([customerId])
  @@index([businessId])
  @@unique([customerId, businessId])
}
